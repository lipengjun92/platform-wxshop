<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.modules.mall.dao.MallAdPositionDao">

    <sql id="selectSql">
        SELECT
        T.ID,
        T.NAME,
        T.WIDTH,
        T.HEIGHT,
        T.`DESC`
        FROM MALL_AD_POSITION T
        WHERE 1=1
        <if test="params.id != null and params.id.trim() != ''">
            AND T.ID = #{params.id}
        </if>
        <if test="params.name != null and params.name.trim() != ''">
            AND T.NAME LIKE '%${params.name}%'
        </if>
    </sql>

    <select id="selectMallAdPositionPage" resultType="com.platform.modules.mall.entity.MallAdPositionEntity">
        <include refid="selectSql"/>
    </select>

    <select id="queryAll" resultType="com.platform.modules.mall.entity.MallAdPositionEntity">
        <include refid="selectSql"/>
    </select>
</mapper>

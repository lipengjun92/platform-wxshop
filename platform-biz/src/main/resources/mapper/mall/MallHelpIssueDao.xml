<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.modules.mall.dao.MallHelpIssueDao">

    <sql id="selectSql">
        SELECT
        T.ID,
        T.TYPE_ID,
        T.QUESTION,
        T.ANSWER,
        T.SORT,
        HT.TYPE_NAME
        FROM MALL_HELP_ISSUE T LEFT JOIN MALL_HELP_TYPE HT ON T.TYPE_ID = HT.ID
        WHERE 1=1
        <if test="params.id != null and params.id.trim() != ''">
            AND T.ID = #{params.id}
        </if>
        <if test="params.typeName != null and params.typeName.trim() != ''">
            AND HT.TYPE_NAME LIKE '%${params.typeName}%'
        </if>
    </sql>

    <select id="selectMallHelpIssuePage" resultType="com.platform.modules.mall.entity.MallHelpIssueEntity">
        <include refid="selectSql"/>
    </select>

    <select id="queryAll" resultType="com.platform.modules.mall.entity.MallHelpIssueEntity">
        <include refid="selectSql"/>
    </select>
</mapper>

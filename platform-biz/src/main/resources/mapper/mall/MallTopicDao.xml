<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.modules.mall.dao.MallTopicDao">

    <sql id="selectSql">
        SELECT
        T.ID,
        T.TITLE,
        T.CONTENT,
        T.AVATAR,
        T.ITEM_PIC_URL,
        T.SUBTITLE,
        T.TOPIC_CATEGORY_ID,
        T.PRICE_INFO,
        T.READ_COUNT,
        T.SCENE_PIC_URL,
        T.TOPIC_TEMPLATE_ID,
        T.TOPIC_TAG_ID,
        MTC.TITLE CATEGORY_NAME
        FROM MALL_TOPIC T
        LEFT JOIN MALL_TOPIC_CATEGORY MTC ON MTC.ID = T.TOPIC_CATEGORY_ID
        WHERE 1=1
        <if test="params.id != null and params.id.trim() != ''">
            AND T.ID = #{params.id}
        </if>
        <if test="params.title != null and params.title.trim() != ''">
            AND T.TITLE LIKE '%${params.title}%'
        </if>
    </sql>

    <select id="selectMallTopicPage" resultType="com.platform.modules.mall.entity.MallTopicEntity">
        <include refid="selectSql"/>
    </select>

    <select id="queryAll" resultType="com.platform.modules.mall.entity.MallTopicEntity">
        <include refid="selectSql"/>
    </select>
</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.ApiGoodsGalleryMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.platform.entity.GoodsGalleryVo" id="goodsGalleryMap">
        <result property="id" column="id"/>
        <result property="goodsId" column="goods_id"/>
        <result property="imgUrl" column="img_url"/>
        <result property="imgDesc" column="img_desc"/>
        <result property="sortOrder" column="sort_order"/>
    </resultMap>

    <select id="queryObject" resultMap="goodsGalleryMap">
		select * from nideshop_goods_gallery where id = #{value}
	</select>

    <select id="queryList" resultMap="goodsGalleryMap">
        select
        <if test="fields != null and fields != ''">
            ${fields}
        </if>
        <if test="fields == null or fields == ''">
            *
        </if>
        from nideshop_goods_gallery
        <where>
            <if test="goodsId != null">
                and goods_id = #{goodsId}
            </if>
        </where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
		select count(*) from nideshop_goods_gallery
	</select>

    <insert id="save" parameterType="com.platform.entity.GoodsGalleryVo" useGeneratedKeys="true" keyProperty="id">
		insert into nideshop_goods_gallery
		(
			`goods_id`,
			`img_url`,
			`img_desc`,
			`sort_order`
		)
		values
		(
			#{goodsId},
			#{imgUrl},
			#{imgDesc},
			#{sortOrder}
		)
	</insert>

    <update id="update" parameterType="com.platform.entity.GoodsGalleryVo">
        update nideshop_goods_gallery
        <set>
            <if test="goodsId != null">`goods_id` = #{goodsId},</if>
            <if test="imgUrl != null">`img_url` = #{imgUrl},</if>
            <if test="imgDesc != null">`img_desc` = #{imgDesc},</if>
            <if test="sortOrder != null">`sort_order` = #{sortOrder}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
		delete from nideshop_goods_gallery where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from nideshop_goods_gallery where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
